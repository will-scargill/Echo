<Application x:Class="Echo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Echo"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button">

            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightGray"/>
                </Trigger>
            </Style.Triggers>
        
        </Style>

        <ControlTemplate x:Key="niceButton" TargetType="Button">
            <Border Width="90" Height="35" CornerRadius="12" Background="{TemplateBinding Background}">
                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
        </ControlTemplate>

        <ControlTemplate x:Key="inputTextBox" TargetType="TextBox">
            <Setter
            <Border Width="auto" Height="35" CornerRadius="12" Background="{TemplateBinding Background}">
            </Border>
        </ControlTemplate>
        
    </Application.Resources>
</Application>
